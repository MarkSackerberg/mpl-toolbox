{
  "private": true,
  "workspaces": [
    "programs/*",
    "clients/*"
  ],
  "scripts": {
    "build": "pnpm run --recursive build",
    "build:programs": "pnpm run --filter='./programs/*' --recursive build",
    "build:clients": "pnpm run --filter='./clients/*' --recursive build",
    "generate": "pnpm generate:idls && pnpm generate:clients",
    "generate:idls": "node ./infra/shank.cjs",
    "generate:clients": "node ./infra/kinobi.cjs",
    "test": "pnpm run --recursive test",
    "test:programs": "pnpm run --filter='./programs/*' --recursive test",
    "test:clients": "pnpm run --filter='./clients/*' --recursive test",
    "validator:start": "CI=1 amman start --config ./infra/validator.cjs",
    "validator:stop": "amman stop"
  },
  "devDependencies": {
    "@lorisleiva/kinobi": "^0.0.35",
    "@lorisleiva/shank-js": "^0.0.1",
    "@metaplex-foundation/amman": "^0.12.1",
    "typescript": "^4.9.4"
  }
}
