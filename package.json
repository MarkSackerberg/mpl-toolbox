{
  "private": true,
  "workspaces": [
    "programs/*",
    "clients/*"
  ],
  "scripts": {
    "generate": "pnpm generate:idls && pnpm generate:clients",
    "generate:idls": "node ./infra/shank.cjs",
    "generate:clients": "node ./infra/kinobi.cjs",
    "build": "pnpm run -r build",
    "build:programs": "pnpm run -r --filter=./programs/* build",
    "build:clients": "pnpm run -r --filter=./clients/* build",
    "test": "pnpm run -r test",
    "test:programs": "pnpm run -r --filter=./programs/* test",
    "test:clients": "pnpm run -r --filter=./clients/* test",
    "bump:patch": "pnpm run -r bump:patch",
    "bump:patch:programs": "pnpm run -r --filter=./programs/* bump:patch",
    "bump:patch:clients": "pnpm run -r --filter=./clients/* bump:patch",
    "bump:minor": "pnpm run -r bump:minor",
    "bump:minor:programs": "pnpm run -r --filter=./programs/* bump:minor",
    "bump:minor:clients": "pnpm run -r --filter=./clients/* bump:minor",
    "bump:major": "pnpm run -r bump:major",
    "bump:major:programs": "pnpm run -r --filter=./programs/* bump:major",
    "bump:major:clients": "pnpm run -r --filter=./clients/* bump:major",
    "deploy": "pnpm run -r deploy",
    "deploy:programs": "pnpm run -r --filter=./programs/* deploy",
    "deploy:clients": "pnpm run -r --filter=./clients/* deploy",
    "validator": "CI=1 amman start --config ./infra/validator.cjs",
    "validator:devnet": "CI=1 amman start --config ./infra/validator.devnet.cjs",
    "validator:mainnet": "CI=1 amman start --config ./infra/validator.mainnet.cjs",
    "validator:stop": "amman stop"
  },
  "devDependencies": {
    "@lorisleiva/kinobi": "^0.0.35",
    "@lorisleiva/shank-js": "^0.0.1",
    "@metaplex-foundation/amman": "^0.12.1",
    "typescript": "^4.9.4"
  }
}
